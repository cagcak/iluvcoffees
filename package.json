{
  "name": "iluvcoffee",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=7.24.0",
    "yarn": ">=1.22.19"
  },
  "scripts": {
    "node": "node --max-old-space-size=8192",
    "nest": "yarn node node_modules/@nestjs/cli/bin/nest.js",
    "npx": "yarn node node_modules/npx/index.js",
    "lint": "yarn node node_modules/eslint/bin/eslint.js \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prettier": "yarn node node_modules/prettier/bin-prettier.js",
    "jest": "yarn node node_modules/jest/bin/jest.js",
    "build": "yarn nest build",
    "format": "yarn prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "rimraf": "yarn node node_modules/rimraf/bin.js",
    "docker": "docker-compose --file ./docker-compose.yml",
    "prebuild": "yarn rimraf dist",
    "start": "yarn nest start",
    "start:dev": "yarn nest start --watch",
    "start:debug": "export NEST_DEBUG=true && yarn nest start --debug --watch",
    "start:prod": "yarn node dist/main",
    "start:app:db": "yarn docker up -d db",
    "stop:app:db": "yarn docker stop db",
    "stop:all:db": "yarn docker down",
    "start:log:db": "yarn docker up -d log-db",
    "stop:log:db": "yarn docker stop log-db",
    "migration:create": "yarn npx typeorm migration:create",
    "migration:run": "yarn npx typeorm migration:run -d dist/typeorm-cli.config",
    "migration:revert": "yarn npx typeorm migration:revert -d dist/typeorm-cli.config",
    "migration:generate": "yarn npx typeorm migration:generate -d dist/typeorm-cli.config",
    "test": "yarn jest",
    "test:watch": "yarn jest --watch",
    "test:cov": "yarn jest --coverage",
    "test:debug": "yarn node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "pretest:e2e": "docker-compose up -d test-db && docker-compose up -d test-log-db",
    "test:e2e": "yarn jest --config ./test/jest-e2e.json",
    "test:e2e:app": "yarn test:e2e --watch app.e2e",
    "test:e2e:coffees": "yarn test:e2e --watch coffees.e2e",
    "posttest:e2e": "docker-compose stop test-db && docker-compose stop test-log-db && docker-compose rm -f test-db test-log-db"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "^2.1.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/mapped-types": "^1.0.1",
    "@nestjs/mongoose": "^9.2.0",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/swagger": "^6.0.3",
    "@nestjs/typeorm": "^9.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "mongoose": "^6.4.4",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "swagger-ui-express": "^4.4.0",
    "typeorm": "^0.3.7"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/express": "^4.17.13",
    "@types/hapi__joi": "^17.1.8",
    "@types/node": "^18.0.5",
    "@types/jest": "28.1.6",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "28.1.3",
    "npx": "^10.2.2",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.2.4",
    "ts-jest": "28.0.1",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.0.0",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "@iluvcoffee/common": "<rootDir>/../src/common"
    }
  }
}
